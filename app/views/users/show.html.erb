<% title = "Profil #{@user.username}" %>
<% provide(:title, title) %>

<div class="row">
  <div class="col-md-9">
    <%= render 'matches', :matches => @matches, :user => @user %>
  </div>
  <div class="col-md-3">
    <h2><%= @user.username %></h2>
    <h3>Punkty: <%= @user.predictions_points %></h3>
    <% if current_user.try(:admin?) %>
      <h3>Email: <%= @user.email %></h3>
    <% end %>
  </div>
</div>
