<%= form_tag update_multiple_predictions_path, :method => :put do %>
<table class="matches table table-striped">
  <thead class="thead-inverse">
    <th class="left">Data</th>
    <th class="left"></th>
    <th class="center" colspan="3">Wynik</th>
    <th class="right"></th>
    <th class="center" colspan="3">Tw√≥j wynik</th>
  </thead>
  <tbody>
    <% matches.each do |match| %>
    <% time_difference = TimeDifference.between(DateTime.now, match.date).in_days %>
    <% if time_difference < 1 %>
      <% row_class = "danger" %>
    <% elsif time_difference < 4 %>
      <% row_class = "warning" %>
    <% end %>
    <tr class="<%= row_class %>">
      <td class="date left"><%= link_to match.date.in_time_zone("Poland").strftime("%d %b. %Y %H:%M"), match_path(match.id) %></td>
      <td class="team_a left"><%= image_tag(match.team_a.flag_url, class: "flag") %><%= link_to match.team_a.name, team_path(match.team_a.id) %></td>
      <td class="score_a right"><%= match.score_a %></td>
      <td class="delimeter center">:</td>
      <td class="score_b left"><%= match.score_b %></td>
      <td class="team_b right"><%= link_to match.team_b.name, team_path(match.team_b.id) %><%= image_tag(match.team_b.flag_url, class: "flag") %></td>
      <% prediction = match.predictions.find_by(user: current_user.id) %>
        <% if prediction && !prediction.score_a.nil? && !prediction.score_b.nil? %>
        <td class="user_prediction_score_a right"><%= match.predictions.find_by(user: current_user.id).score_a %></td>
        <td class="delimeter center">:</td>
        <td class="user_prediction_score_b left"><%= match.predictions.find_by(user: current_user.id).score_b %></td>
      <% elsif prediction && prediction.score_a? == false %>
        <%= render 'prediction_form', :prediction => prediction, :match_id => match.id %>
      <% else %>
        <% prediction = Prediction.create(match: match, user: current_user) %>
        <%= render 'prediction_form', :prediction => prediction, :match_id => match.id %>
      <% end %>
      <td class="">
        <% match.channels.each do |channel| %>
          <% if channel.image_url.present? %>
            <%= image_tag channel.image_url %>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="9">
        <div class="actions">
          <%= submit_tag "Submit", :class => "btn btn-primary"%>
        </div>
      </td>
    </tr>
  </tfoot>
</table>
<% end %>
