<% title = "#{@team.name}" %>
<% provide(:title, title) %>

<p id="notice"><%= notice %></p>
<div class="row">
  <h1 class="team_name"><%= image_tag(@team.flag_url) %><%= link_to @team.name, team_path(@team.id) %></h1>
</div>
<div class="row">
  <div class="col-md-6">
    <h2>Ostatnie mecz</h2>
    <%= render 'matches', :matches => @team.last_matches(5) %>
  </div>
  <div class="col-md-6">
    <h2>NastÄ™pne mecze</h2>
    <%= render 'matches', :matches => @team.next_matches(5) %>
  </div>
</div>
<% if current_user.try(:admin?) %>
<%= link_to 'Edit', edit_team_path(@team) %>
<% end %>
