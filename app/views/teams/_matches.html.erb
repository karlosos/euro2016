<table>
  <% matches.each do |match| %>
  <% this_team = 2 %>
  <% this_team = 1 if match.team_a == @team %>
  <tr class="<%= get_row_class_for_team_and_result(this_team, match.get_result) %>">
    <td><%= match.date.strftime("%d %b. %Y %H:%M") %></td>
    <td class="left">
      <%= match.team_a.name %>
    </td>
    <td class="right">
      <%= match.score_a %>
    </td>
    <td class='delimeter'>:</td>
    <td class="left">
      <%= match.score_b %>
    </td>
    <td class="right">
      <%= match.team_b.name %>
    </td>
  </tr>
  <% end %>
</table>
