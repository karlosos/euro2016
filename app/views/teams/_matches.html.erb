<table>
  <% matches.each do |match| %>
  <% this_team = 2 %>
  <% this_team = 1 if match.team_a == @team %>
  <tr class="<%= get_row_class_for_team_and_result(this_team, match.get_result) %>">
    <td>
      <%= link_to match.date.in_time_zone("Poland").strftime("%d %b. %Y %H:%M"), match_path(match.id) %>
    </td>
    <td class="left">
      <%= link_to match.team_a.name, team_path(match.team_a.id) %>
    </td>
    <td class="center">
      <div class="score">
        <span class="event-result">
        <% if match.score_a.present? %>
          <%= match.score_a %>
          :
          <%= match.score_b %>
        <% else %>
          -:-
        <% end %>
        </span>
      </div>
    </td>
    <td class="right">
      <%= link_to match.team_b.name, team_path(match.team_b.id) %>
    </td>
    <td class="">
      <% match.channels.each do |channel| %>
        <% if channel.image_url.present? %>
          <%= image_tag channel.image_url %>
        <% end %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
